color = $olive

*
  margin 0
  padding 0

body
  height 100vh
  width 100vw
  display flex
  justify-content center

#main
  align-self center

#bibtex_text
  resize none
  margin-top 15px
  font-size large

#input_container
  display flex
  justify-content space-between
/*
#isbn_text
  font-size large*/


#isbn_button:disabled
  button-disabled()
  //color grey

#isbn_button:enabled
  color color
  //border-color color;

form .field-error
  field-error()


#isbn_button
  height 100%
  background white


#isbn_button:focus
  outline 0

input[type=text], textarea {
  -webkit-transition all 0.30s ease-in-out
  -moz-transition all 0.30s ease-in-out
  -ms-transition all 0.30s ease-in-out
  -o-transition all 0.30s ease-in-out
  outline none;
  padding 3px 0 3px 3px
  margin 5px 1px 3px 0
  border-width 1px
  border-style solid
}

textarea
  border-color $silver

textarea:focus {
  box-shadow: 0 0 5px $gray
  border-color $gray
}



.text_correct
  color $lime
  border-color $lime

.text_correct:focus
  box-shadow: 0 0 5px $lime
  border-color $lime

.text_incorrect
  color $silver
  border-color $silver

.text_incorrect:focus
  color $red
  box-shadow: 0 0 5px $red
  border-color $red