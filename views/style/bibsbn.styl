#isbn_text
  font-size large

#isbn_button
  -webkit-transition all 0.30s ease-in-out
  -moz-transition all 0.30s ease-in-out
  -ms-transition all 0.30s ease-in-out
  -o-transition all 0.30s ease-in-out
  flex 0.3
  border-style solid
  font-size large
  color white

  border-width 1px
  border-radius 0
  box-shadow: 0 0 5px $gray


#isbn_button:disabled
  border-color $gray
  color $gray
  background white
  cursor not-allowed

#isbn_button:enabled
  border-color palette2_green
  background white
  color palette2_green


#isbn_button:hover:disabled
  border-color palette2_red
  background white

#isbn_button:hover:enabled
  border-color palette2_green
  background palette2_green
  color white
  cursor pointer

#isbn_button:active
  border-color palette2_green
  background white
  color palette2_green








#isbn_button:focus
  outline 0

input[type=text], textarea
  -webkit-transition all 0.30s ease-in-out
  -moz-transition all 0.30s ease-in-out
  -ms-transition all 0.30s ease-in-out
  -o-transition all 0.30s ease-in-out
  outline none;
  padding 5px 0 5px 3px
  border-width 1px
  border-style solid


textarea
  border-color $silver
  color $navy

textarea:focus {
  box-shadow: 0 0 5px $gray
}

color_correct = $lime
color_incorrect = $orange

.text_correct
  color palette2_green
  border-color palette2_green

.text_correct:focus
  box-shadow: 0 0 5px palette2_green
  border-color palette2_green

.text_incorrect
  color palette2_red
  border-color $silver
  //border-bottom-color $red

.text_incorrect:focus
  color palette2_red
  border-color palette2_red
  box-shadow: 0 0 5px palette2_red