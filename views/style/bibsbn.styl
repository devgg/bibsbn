palette1_red = #fbaea8
palette1_green = #b8f5d2
palette1_blue = #c1e0f5

palette2_red = #D43F3F
palette2_green = #6A9A1F
palette2_blue = #00ACE9

*
  margin 0
  padding 0

body
  height 100vh
  width 100vw
  display flex
  justify-content center

#main
  align-self center

#bibtex_text
  resize none
  margin-top 15px
  font-size large

#input_container
  display flex
  justify-content space-between
