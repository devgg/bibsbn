
@import url(https://fonts.googleapis.com/css?family=Montserrat)
@import url(https://fonts.googleapis.com/css?family=Open\+Sans)
@import url(https://fonts.googleapis.com/css?family=Lato)
@import url(https://fonts.googleapis.com/css?family=Jura);

@import 'isbn.styl'
@import 'status.styl'






*
  font-family 'Jura', sans-serif
  margin 0
  padding 0



body
  height 100vh
  width 100vw
  display flex
  flex-direction column
  background color_gradient_right
  background -webkit-linear-gradient(to left, color_gradient_right, color_gradient_left)
  background linear-gradient(to left, color_gradient_right, color_gradient_left)





header
  width 100%
  height 81px
  //border-bottom-color white
  border-bottom-style solid
  border-bottom-width 1px
  border-bottom-color rgba(255, 255, 255, 0.0980392)
  color white
  display flex




#title_container
  align-self flex-start
  display flex
  flex-direction column
  margin 15px 0
  padding-left 100px

#title
  font-size 40px

#subtitle
  font-size 10px
  padding-left 3px


#main_container
  display flex
  justify-content center
  height 100%

#main
  align-self center
  background 0 0

#input_container
  display flex
  justify-content space-between

footer
  align-self flex-end
  //font-family 'Lato', sans-serif
  color white
  font-weight light
  font-size x-small
  padding 5px 10px

